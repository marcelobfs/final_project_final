<body>
  
<div class="my-3 p-3 bg-white rounded box-shadow">
  
        <h4 class="border-bottom border-gray pb-2 mb-0">Atualizações recentes</h4>

        <% @activity_log.first(3).each do |activity| %>
        
        <div class="media text-muted pt-3 border-bottom">
          <!--<img data-src= alt="32x32" class="mr-2 rounded" style="width: 32px; height: 32px;" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%2232%22%20height%3D%2232%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%2032%2032%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_166838ace47%20text%20%7B%20fill%3A%23007bff%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A2pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_166838ace47%22%3E%3Crect%20width%3D%2232%22%20height%3D%2232%22%20fill%3D%22%23007bff%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2212.296875%22%20y%3D%2216.9%22%3E32x32%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">-->
          
          <p class="media-body ml-3 pb-3 mb-0 small lh-125">
            <strong class="d-block text-success">@<%= activity.user_name %></strong>
            <%=activity.activity_description %>. Arquivo: <%=activity.file_name %>
          </p>
          
          <span class="text-muted small"><%= activity.created_at.to_formatted_s(:long) %></span>
        </div>

      <% end %>


        <small class="d-block text-right mt-3">
          <a href="/activity_logs">All updates</a>
        </small>
      </div>
      
      <div class="row">
        <div class="col-md-6 mb-3">

          <h4 class="d-flex justify-content-between align-items-center mb-3">Mercado
          </h4>
          <ul class="list-group mb-3">

          <% MarketPrice.order('created_at desc').limit(4).each do |get_info| %>           
            
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">
                  <%= get_info.gender %> <%= get_info.age_group %>
                  </h6>
                <small class="text-muted">
                  <%= get_info.last_update %> - <%= get_info.observation %>
                  </small>
              </div>
              <span class="text-muted">
               R$ <%= get_info.price %>
                </span>
            </li>
            <% end %>
            
          </ul>


        </div>
        <div class="col-md-6 mb-3">  
        
<h4 class="d-flex justify-content-between align-items-center mb-3">
              <span>Atividades nos útimos 30 dias</span>

  </h4>
<ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
    Pesagem
    <span class="badge badge-primary badge-pill  bg-success">
      <%= Weighting.where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
    Vacinação
    <span class="badge badge-primary badge-pill  bg-success">
      <%= Vaccination.where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
    Prenhez
    <span class="badge badge-primary badge-pill  bg-success">
      <%= Pregnancy.where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
    Nascimento
    <span class="badge badge-primary badge-pill  bg-success">
      <%= Cattle.where(status: "mamando").where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Desmame
    <span class="badge badge-primary badge-pill  bg-success">
      <%= Cattle.where(status: "engorda", origem: "crioulo").where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Compra
    <span class="badge badge-primary badge-pill  bg-success">
      <%= Cattle.where(status: "engorda", pai: "").where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Venda
    <span class="badge badge-primary badge-pill  bg-success">
      <%= CattleSale.where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Fatalidade
    <span class="badge badge-primary badge-pill  bg-success">
      <%= Death.where('updated_at > ?', 30.days.ago).count %>
      </span>
  </li>

</ul>
</div>

  
  </div>
  </div>
  
<div class="row">
<picture>
  <img src="https://climatenexus.org/wp-content/uploads/2017/10/33918072066_cd3efd36ee_o.jpg" 
  class="img-fluid" 
  alt="Responsive image">
</picture>
</div>


</body>