<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cattle
    </h1>

    <a href="/cattle/new" class="btn btn-block btn-outline-secondary">
      Add a new cattle
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "cattle_templates/cattles_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Brinco
        </th>

        <th>
          Data compra ou desmame
        </th>

        <th>
          Data nascimento
        </th>

        <th>
        Origem
        </th>
        
        <th>
        Raça
        </th>
        
        <th>
        Sexo
        </th>
        
        <th>
        Pai
        </th>
        
        <th>
        Brinco Mãe
        </th>
        
        <th>
        Peso Entrada
        </th>
        
        <th>
        Preco por Kilo
        </th>
        
        <th>
        Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cattles.each do |cattle| %>
      <tr>
        <td>
          <%= cattle.id %>
        </td>

        <td>
          <%= cattle.brinco %>
        </td>

        <td>
          <%= cattle.data_compra_ou_desmame.try(:strftime, '%d/%m/%y') %>
        </td>
        
                <td>
          <%= cattle.data_nascimento.try(:strftime, '%d/%m/%y') %>
        </td>
        
                <td>
          <%= cattle.origem %>
        </td>
        
                <td>
          <%= cattle.raca %>
        </td>
        
                <td>
          <%= cattle.sexo %>
        </td>
        
                <td>
          <%= cattle.pai %>
        </td>
        
                        <td>
          <%= cattle.brinco_mae %>
        </td>
        
                        <td>
          <%= cattle.peso_entrada %>
        </td>

        <td>
          <%= cattle.preco_por_kilo %>
        </td>

        <td>
          <%= cattle.status %>
        </td>

        <td>
          <%= time_ago_in_words(cattle.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(cattle.updated_at) %> ago
        </td>

        <td>
          <a href="/cattles/<%= cattle.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cattles, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
