<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All vaccinations
    </h1>

    <a href="/vaccinations/new" class="btn btn-block btn-outline-secondary">
      Add a new vaccination
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cattle
        </th>

        <th>
          Brinco
        </th>

        <th>
          Tipo vacina
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @vaccinations.each do |vaccination| %>
      <tr>
        <!-- Display vaccination.id start -->
        <td>
          <%= vaccination.id %>
        </td>
        <!-- Display vaccination.id end -->

        <!-- Display vaccination.cattle_id start -->
        <td>
          <% if vaccination.cattle.present? %>
            <a href="/cattles/<%= vaccination.cattle.id %>">
              <%= vaccination.cattle.brinco %>
            </a>
          <% end %>
        </td>
        <!-- Display vaccination.cattle_id end -->

        <!-- Display vaccination.brinco start -->
        <td>
          <%= vaccination.brinco %>
        </td>
        <!-- Display vaccination.brinco end -->

        <!-- Display vaccination.tipo_vacina start -->
        <td>
          <%= vaccination.tipo_vacina %>
        </td>
        <!-- Display vaccination.tipo_vacina end -->

        <!-- Display vaccination.created_at start -->
        <td>
          <%= time_ago_in_words(vaccination.created_at) %> ago
        </td>
        <!-- Display vaccination.created_at end -->

        <!-- Display vaccination.updated_at start -->
        <td>
          <%= time_ago_in_words(vaccination.updated_at) %> ago
        </td>
        <!-- Display vaccination.updated_at end -->

        <td>
          <a href="/vaccinations/<%= vaccination.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @vaccinations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
