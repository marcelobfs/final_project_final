<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All vaccinations
    </h1>

    <a href="/vaccinations/new" class="btn btn-block btn-outline-secondary">
      Add a new vaccination
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "vaccination_templates/vaccinations_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cattle
        </th>

        <th>
          Brinco
        </th>

        <th>
          Tipo vacina
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @vaccinations.each do |vaccination| %>
      <tr>
        <td>
          <%= vaccination.id %>
        </td>

        <td>
          <% if vaccination.cattle.present? %>
            <a href="/cattles/<%= vaccination.cattle.id %>">
              <%= vaccination.cattle.brinco %>
            </a>
          <% end %>
        </td>

        <td>
          <%= vaccination.brinco %>
        </td>

        <td>
          <%= vaccination.tipo_vacina %>
        </td>

        <td>
          <%= time_ago_in_words(vaccination.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(vaccination.updated_at) %> ago
        </td>

        <td>
          <a href="/vaccinations/<%= vaccination.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @vaccinations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
