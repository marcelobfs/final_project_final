<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pregnancies
    </h1>

    <a href="/pregnancies/new" class="btn btn-block btn-outline-secondary">
      Add a new pregnancy
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "pregnancy_templates/pregnancies_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Cattle
        </th>

        <th>
          Brinco
        </th>

        <th>
          Touro
        </th>

        <th>
          Prenha
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pregnancies.each do |pregnancy| %>
      <tr>
        <!-- Display pregnancy.id start -->
        <td>
          <%= pregnancy.id %>
        </td>
        <!-- Display pregnancy.id end -->

        <!-- Display pregnancy.cattle_id start -->
        <td>
          <% if pregnancy.cattle.present? %>
            <a href="/cattles/<%= pregnancy.cattle.id %>">
              <%= pregnancy.cattle.brinco %>
            </a>
          <% end %>
        </td>
        <!-- Display pregnancy.cattle_id end -->

        <!-- Display pregnancy.brinco start -->
        <td>
          <%= pregnancy.brinco %>
        </td>
        <!-- Display pregnancy.brinco end -->

        <!-- Display pregnancy.touro start -->
        <td>
          <%= pregnancy.touro %>
        </td>
        <!-- Display pregnancy.touro end -->

        <!-- Display pregnancy.prenha start -->
        <td>
          <%= pregnancy.prenha %>
        </td>
        <!-- Display pregnancy.prenha end -->

        <!-- Display pregnancy.created_at start -->
        <td>
          <%= time_ago_in_words(pregnancy.created_at) %> ago
        </td>
        <!-- Display pregnancy.created_at end -->

        <!-- Display pregnancy.updated_at start -->
        <td>
          <%= time_ago_in_words(pregnancy.updated_at) %> ago
        </td>
        <!-- Display pregnancy.updated_at end -->

        <td>
          <a href="/pregnancies/<%= pregnancy.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pregnancies, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
