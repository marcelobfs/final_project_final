<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All market prices
    </h1>

    <a href="/market_prices/new" class="btn btn-block btn-outline-secondary">
      Add a new market price
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "market_price_templates/market_prices_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Last update
        </th>

        <th>
          Observation
        </th>

        <th>
          Age group
        </th>

        <th>
          Gender
        </th>

        <th>
          Price
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @market_prices.each do |market_price| %>
      <tr>
        <td>
          <%= market_price.id %>
        </td>

        <td>
          <%= market_price.last_update %>
        </td>

        <td>
          <%= market_price.observation %>
        </td>

        <td>
          <%= market_price.age_group %>
        </td>

        <td>
          <%= market_price.gender %>
        </td>

        <td>
          <%= market_price.price %>
        </td>

        <td>
          <%= time_ago_in_words(market_price.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(market_price.updated_at) %> ago
        </td>

        <td>
          <a href="/market_prices/<%= market_price.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @market_prices, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
