<h1>
  Fatalidade
</h1>


<hr>

<form action="/create_death" method="post">
  
  <div class="form-group">
    <label for="date">
      Data
    </label>

    <input type="text" id="title" name="date" class="form-control" value= <%= Time.now.strftime('%d/%m/%Y') %>>
  </div>

  <div class="form-group">
    <label for="brinco">
      Brinco
    </label>
    <input type="text" id="brinco" name="brinco" class="form-control">
  </div>

  <div class="form-group">
    <label for="causa">
      Causa
    </label>

    <input type="text" id="causa" name="causa" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Atualizar morte
  </button>
</form>

<hr>

<a href="/deaths">
  Voltar
</a>
